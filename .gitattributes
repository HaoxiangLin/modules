# Basic .gitattributes for R
*.Rd    text diff=r
*.Rmd	  text diff=r
*.R  	  text diff=r

# Basic .gitattributes for Perl
*.pl    text diff=perl
*.pm    text diff=perl

# Basic .gitattributes for Python
*.pxd    text diff=python
*.py     text diff=python
*.py3    text diff=python
*.pyc    text diff=python
*.pyd    text diff=python
*.pyo    text diff=python
*.pyw    text diff=python
*.pyx    text diff=python
*.pyz    text diff=python
*.db     binary
*.p      binary
*.pkl    binary
*.pickle binary
*.pyc    binary
*.pyd    binary
*.pyo    binary
*.ipynb  text

# Basic .gitattributes for Serialisation
*.yaml   text
*.yml    text

# Basic .gitattributes for Shell scripts
*.sh     text eol=lf
